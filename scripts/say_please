prompt_options

tee -a ~/.bashrc ~/.bash_profile 2>&1 1>/dev/null <<-EOF
# === CONFLOOSE === #
say_please()
{
    while true; do
        echo -n "Say please: "
        read answer

        if [ "\$answer" == "please" ]; then
            break
        fi
    done
}

export PROMPT_COMMAND="say_please; \$PROMPT_COMMAND"
# ================= #
EOF
